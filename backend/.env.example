# Server Configuration
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://onefort:onefort_password@localhost:5432/onefort_dev

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_min_32_characters_long_change_in_production
JWT_EXPIRES_IN=24h

# OAuth Providers (Mock for now)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/v1/auth/oauth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:4000/api/v1/auth/oauth/github/callback

# OneChain Configuration
ONECHAIN_NETWORK=devnet
ONECHAIN_RPC_URL=https://rpc-devnet.onelabs.cc
ONECHAIN_PRIVATE_KEY=your_private_key_for_gas_fees

# OneWallet API
ONEWALLET_API_KEY=your_onewallet_api_key
ONEWALLET_API_URL=https://wallet-api-devnet.onelabs.cc

# USDO Token
USDO_CONTRACT_ADDRESS=0x_usdo_token_address_on_onechain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
